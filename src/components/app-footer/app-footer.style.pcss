.app-footer {
  color: var(--white);
  background-color: var(--indigo--900);
  padding: 40px;
}
.app-footer__nav {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40px;

  & a {
    display: block;
    color: inherit;
    text-decoration: none;
    padding: 0 20px;
    font-size: 18px;
    font-weight: 700;
    line-height: 38px;

    &:hover {
      opacity: 0.8;
    }
  }
}
.app-footer__copy {
  text-align: center;
  font-size: 12px;
}
