{% macro AppSearch() %}
  <section class="app-search">
    <h2 class="app-search__title">Handcrafted, home-made masterpieces</h2>
    <form class="app-search__form" id="form" action="https://www.freecodecamp.com/email-submit">
      <input class="app-search__form-field" name="email" id="email" type="email" placeholder="Enter your email address" required="">
      <input class="app-search__submit" id="submit" type="submit" value="Get Started">
    </form>
  </section>
{% endmacro %}