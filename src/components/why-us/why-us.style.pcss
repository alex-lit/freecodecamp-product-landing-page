.why-us {
  padding: 40px 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.why-us__item {
  width: 100%;
  max-width: 820px;
  margin: 20px 0;
  display: flex;
}
.why-us__icon {
  margin-right: 20px;
  flex-shrink: 0;
  width: 60px;
  height: 60px;
  text-align: center;
  color: var(--red--900);
}

.why-us__caption {
  & h2 {
    color: var(--indigo--900);
    margin-bottom: 10px;
  }

  & p {
    opacity: 0.8;
  }
}
